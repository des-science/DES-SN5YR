GENTYPE:   1
GENMODEL: $SNDATA_ROOT/models/SALT3/SALT3.DES5YR
GENMODEL_EXTRAP_LATETIME: $PLASTICC_MODELS/SNIa_Extrap_LateTime_2expon.TEXT
GENMAG_SMEAR_ADDPHASECOR: 0.03 2
GENPDF_FILE: $SNDATA_ROOT/models/population_pdf/DES-SN5YR/DES-SN5YR_LOWZ_S3_P21.DAT
GENPDF_OPTMASK: 1

DNDZ: POWERLAW  2.6E-5  1.5  # Dilday 2008

SIMLIB_FILE:  $SNDATA_ROOT/simlib/DES/DES-SN5YR_LOWZ.SIMLIB
SIMLIB_NREPEAT:  1  # ==> faster

GENSIGMA_VPEC:  300
VPEC_ERR:     270
GENRANGE_REDSHIFT:  0.007   0.0999

HOSTLIB_FILE:  $SNDATA_ROOT/simlib/DES/DES-SN5YR_LOWZ.HOSTLIB
HOSTLIB_SCALE_PROPERTY_ERR: 0.0(LOGMASS),0.0(LOGSFR),0.0(LOGsSFR),0.0(COLOR)
HOSTLIB_MSKOPT: 258
HOSTLIB_STOREPAR: LOGMASS_TRUE
HOSTLIB_DZTOL:    0.03  0.0  0.
HOSTLIB_WGTMAP_FILE: $SNDATA_ROOT/simlib/DES/DES-SN5YR_WGTmaps/DES-SN5YR_LOWZ.WGT

SOLID_ANGLE:  6.0    # roughly half the sky

GENSOURCE:   RANDOM
RANSEED: 12945       # random number seed

GENFILTERS:  abcdefghijklmnopqrstuvwxyzABCDEFGH
KCOR_FILE:   $SNDATA_ROOT/kcor/DES/DES-SN5YR/calib_DES-SN5YR_LOWZ.fits.gz


GENRANGE_PEAKMJD:  51900.0  55650 #53200.0  55350
OPT_SETPKMJD: 16  # fmax clump

GENRANGE_TREST:   -20.0  80.0     # rest epoch relative to peak (days)
GENSIGMA_REDSHIFT:  0.0001

OPT_MWEBV:      3    # 3=Schlaffly 2011
OPT_MWCOLORLAW: 99   # 99=Fitzpatrick99
RV_MWCOLORLAW: 3.1

SMEARFLAG_FLUX:    1  # photo-stat smearing of signal, sky, etc ...
SMEARFLAG_ZEROPT:  1  # smear zp. deliberately different to DES
FUDGE_ZPTERR:  0.02    # ad-hoc to match FITPROB distribution


APPLY_SEARCHEFF_OPT:  3  # use efficiency file
SEARCHEFF_SPEC_FILE:  $SNDATA_ROOT/models/searcheff/SEARCHEFF_SPEC_LOWZ_DES-SN5YR.DAT
SEARCHEFF_PIPELINE_LOGIC_FILE: $SNDATA_ROOT/models/searcheff/SEARCHEFF_PIPELINE_LOGIC.DAT

NEWMJD_DIF: 0.002

USE_SIMLIB_REDSHIFT:  0
USE_SIMLIB_PEAKMJD:   1

# Apply minimal cuts to remove out of season SN
APPLY_CUTWIN_OPT: 1                 # 1=implement cuts
CUTWIN_NEPOCH:   5 -5.              # require 5 epochs (no S/N requirement)
CUTWIN_TRESTMIN: -20  20
CUTWIN_TRESTMAX:   0  40
CUTWIN_MWEBV:      0  0.30




